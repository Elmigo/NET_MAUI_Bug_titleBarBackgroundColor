<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TitleBarBgColor.SecondPage"
             Title="SecondPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            Text="Second Page"
            FontSize="32"
            HorizontalOptions="Center" />
        <Label
            Text="List of B items"
            FontSize="14"
            HorizontalOptions="Center" />

        <Button
            Text="Go to C directly"
            Command="{Binding GoToCDirectlyBCommand}"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
    
</ContentPage>